@model CheckYourCar.Models.VehicleRecall

<br />
<h2 class="text-info">Check Recall</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Check">

        <input type="hidden" asp-for="Id" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MakeName"></label>
            </div>
            <div class="col-6">
                <input asp-for="MakeName" class="form-control" />
                <span asp-validation-for="MakeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ModelName"></label>
            </div>
            <div class="col-6">
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Check
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

